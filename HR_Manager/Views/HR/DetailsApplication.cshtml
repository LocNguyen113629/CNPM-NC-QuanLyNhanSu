@model HR_Manager.Models.PhieuNghiPhep

@{
    ViewBag.Title = "DetailsApplication";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title" style="margin-left:300px;">
                            Application Information
                        </h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-6 image-detail-employee">
                            <img class="image-information-detail" style="height:360px;width:430px;margin-bottom:10px" src="@Model.AnhNghiPhepNV" alt="Ảnh Nghỉ Phép Nhân Viên" />
                        </div>

                        <div class="col-md-6 detail-information-employee">
                            <div class="row">
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Full Name
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.DisplayFor(model => model.NhanVien.HoTen)
                                        </p>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Date Create
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.ValueFor(model => model.NgayLapPNP, "{0:dd/MM/yyyy}")
                                        </p>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Leave From
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.ValueFor(model => model.NgayBDNghi, "{0:dd/MM/yyyy}")
                                        </p>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Leave End
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.ValueFor(model => model.NgayDiLam, "{0:dd/MM/yyyy}")
                                        </p>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Content
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.DisplayFor(model => model.NoiDungNP)
                                        </p>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <span>
                                            Status
                                        </span>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <p>
                                            @Html.DisplayFor(model => model.TrangThai)
                                        </p>
                                    </fieldset>
                                </div>

                                <div class="col-md-6">
                                    <fieldset>
                                        <a href="@Url.Action("","HR", new { id = Model.MaNV })" class="fa fa-check-square-o" style="font-size: 22px; color:forestgreen; margin-left:400px"></a>

                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>